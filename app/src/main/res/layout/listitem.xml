<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/car"/>

    <TextView
        android:id="@+id/carNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:text="Ford Taurus"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/carYearText"
        android:layout_alignTop="@+id/carYearText" />

    <TextView
        android:id="@+id/carPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$4500"
        android:layout_alignLeft="@+id/carYearText"
        android:layout_below="@+id/carYearText"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/carYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2006"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/carImage"
        android:layout_alignTop="@+id/carImage"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>